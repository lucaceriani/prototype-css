{
  "manifest_version": 3,
  "name": "Kiss my CSS",
  "description": "A quick way to prototype CSS :)",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["*://*/*"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  }
}
